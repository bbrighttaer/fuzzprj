<?xml version='1.0' encoding='UTF-8' ?>
<!-- Linguistic variables for OpenAI Gym Pendulum-v0 -->
<linguisticVariables xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                     xsi:noNamespaceSchemaLocation="../../../fuzzrl/fuzzrl/core/res/linguisticVariables.xsd">
    <variable name="carPosition" rangeMin="-1.2" rangeMax="0.6" type="input" procedure="getCarPosition">
        <terms>
            <term name="LOW">
                <mf>Triangle</mf>
                <params>-1.3 -1.2 0.0</params>
            </term>
            <term name="MEDIUM">
                <mf>Triangle</mf>
                <params>-1.2 0.0 0.3</params>
            </term>
            <term name="HIGH">
                <mf>Triangle</mf>
                <params>0.3 0.6 1.0</params>
            </term>
        </terms>
    </variable>

    <variable name="carVel" rangeMin="-0.07" rangeMax="0.07" type="input" procedure="getCarVelocity">
        <terms>
            <term name="LOW">
                <mf>Triangle</mf>
                <params>-0.1 -0.07 0.0</params>
            </term>
            <term name="MEDIUM">
                <mf>Triangle</mf>
                <params>-0.07 -0.0 0.07</params>
            </term>
            <term name="HIGH">
                <mf>Triangle</mf>
                <params>-0.0 0.07 0.1</params>
            </term>
        </terms>
    </variable>

    <!-- output variable -->
    <variable name="appliedForce" rangeMin="-1.0" rangeMax="1.0" type="output">
        <terms>
            <term name="low">
                <mf>Triangle</mf>
                <params>-1.5 -1.0 0.0</params>
            </term>
            <term name="medium">
                <mf>Triangle</mf>
                <params>-1.0 0.0 1.0</params>
            </term>
            <term name="high">
                <mf>Triangle</mf>
                <params>0.0 1.0 1.5</params>
            </term>
        </terms>
    </variable>
