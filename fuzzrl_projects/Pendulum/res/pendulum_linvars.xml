<?xml version='1.0' encoding='UTF-8' ?>
<!-- Linguistic variables for OpenAI Gym Pendulum-v0 -->
<linguisticVariables xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                     xsi:noNamespaceSchemaLocation="../../../fuzzrl/fuzzrl/core/res/linguisticVariables.xsd">
    <variable name="cosTheta" rangeMin="-1.0" rangeMax="1.0" type="input" procedure="getCosTheta">
        <terms>
            <term name="LOW">
                <mf>Triangle</mf>
                <params>-1.5 -1.0 0.0</params>
            </term>
            <term name="MEDIUM">
                <mf>Triangle</mf>
                <params>-1.0 0.0 1.0</params>
            </term>
            <term name="HIGH">
                <mf>Triangle</mf>
                <params>0.0 1.0 1.5</params>
            </term>
        </terms>
    </variable>

    <variable name="sinTheta" rangeMin="-1.0" rangeMax="1.0" type="input" procedure="getSinTheta">
        <terms>
            <term name="LOW">
                <mf>Triangle</mf>
                <params>-1.5 -1.0 0.0</params>
            </term>
            <term name="MEDIUM">
                <mf>Triangle</mf>
                <params>-1.0 0.0 1.0</params>
            </term>
            <term name="HIGH">
                <mf>Triangle</mf>
                <params>0.0 1.0 1.5</params>
            </term>
        </terms>
    </variable>

    <variable name="thetaDot" rangeMin="-8.0" rangeMax="8.0" type="input" procedure="getThetaDot">
        <terms>
            <term name="LOWEST">
                <mf>Triangle</mf>
                <params>-9.0 -8.0 -4.0</params>
            </term>
            <term name="LOW">
                <mf>Triangle</mf>
                <params>-8.0 -4.0 0.0</params>
            </term>
            <term name="MEDIUM">
                <mf>Triangle</mf>
                <params>-4.0 0.0 4.0</params>
            </term>
            <term name="HIGH">
                <mf>Triangle</mf>
                <params>0.0 4.0 8.0</params>
            </term>
            <term name="HIGHEST">
                <mf>Triangle</mf>
                <params>4.0 8.0 9.0</params>
            </term>
        </terms>
    </variable>

    <variable name="internalStateInputVariable" rangeMin="-2.0" rangeMax="2.0" type="input">
        <terms>
            <term name="LOW">
                <mf>Triangle</mf>
                <params>-2.5 -2.0 0</params>
            </term>
            <term name="MEDIUM">
                <mf>Triangle</mf>
                <params>-2.0 0.0 2.0</params>
            </term>
            <term name="HIGH">
                <mf>Triangle</mf>
                <params>0.0 2.0 2.5</params>
            </term>
        </terms>
    </variable>

    <!-- output variable -->
    <variable name="JointEffort" rangeMin="-2.0" rangeMax="2.0" type="output">
        <terms>
            <term name="action">
                <mf>Triangle</mf>
                <params>-2 0 2</params>
            </term>
        </terms>
    </variable>
</linguisticVariables>