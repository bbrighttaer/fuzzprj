<?xml version='1.0' encoding='UTF-8' ?>
<!-- Linguistic variables for OpenAI Gym CartPole-v1 -->
<linguisticVariables xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                     xsi:noNamespaceSchemaLocation="../core/res/linguisticVariables.xsd">
    <variable name="leftSensors" rangeMin="0" rangeMax="5" type="input" procedure="getleftsensors">
        <terms>
            <term name="LOW">
                <mf>Triangle</mf>
                <params>-2.5 0 2.5</params>
            </term>
            <term name="MEDIUM">
                <mf>Triangle</mf>
                <params>0 2.5 5</params>
            </term>
            <term name="HIGH">
                <mf>Triangle</mf>
                <params>2.5 5 7.5</params>
            </term>
        </terms>
    </variable>

    <variable name="midSensors" rangeMin="0" rangeMax="5" type="input" procedure="getmidsensors">
        <terms>
            <term name="LOW">
                <mf>Triangle</mf>
                <params>-2.5 0 2.5</params>
            </term>
            <term name="MEDIUM">
                <mf>Triangle</mf>
                <params>0 2.5 5</params>
            </term>
            <term name="HIGH">
                <mf>Triangle</mf>
                <params>2.5 5 7.5</params>
            </term>
        </terms>
    </variable>

    <variable name="rightSensors" rangeMin="0" rangeMax="5" type="input" procedure="getrightsensors">
        <terms>
            <term name="LOW">
                <mf>Triangle</mf>
                <params>-2.5 0 2.5</params>
            </term>
            <term name="MEDIUM">
                <mf>Triangle</mf>
                <params>0 2.5 5</params>
            </term>
            <term name="HIGH">
                <mf>Triangle</mf>
                <params>2.5 5 7.5</params>
            </term>
        </terms>
    </variable>

    <!-- output variable -->
    <variable name="Movement" rangeMin="0.0" rangeMax="2.0" type="output">
        <terms>
            <term name="LEFT">
                <mf>Triangle</mf>
                <params>-1 0 1</params>
            </term>
            <term name="RIGHT">
                <mf>Triangle</mf>
                <params>0 1 2</params>
            </term>
            <term name="NOOP">
                <mf>Triangle</mf>
                <params>1 2 3</params>
            </term>
        </terms>
    </variable>
</linguisticVariables>