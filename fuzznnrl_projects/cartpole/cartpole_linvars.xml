<?xml version='1.0' encoding='UTF-8' ?>
<!-- Linguistic variables for OpenAI Gym CartPole-v1 -->
<linguisticVariables xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                     xsi:noNamespaceSchemaLocation="../core/res/linguisticVariables.xsd">
    <variable name="cartPosition" rangeMin="-4.8" rangeMax="4.8" type="input" procedure="getCartPosition">
        <terms>
            <term name="LOW">
                <mf>Triangle</mf>
                <params>-5.8 -4.8 -1</params>
            </term>
            <term name="MEDIUM">
                <mf>Triangle</mf>
                <params>-1.5 0 1.5</params>
            </term>
            <term name="HIGH">
                <mf>Triangle</mf>
                <params>1 4.8  5.8</params>
            </term>
        </terms>
    </variable>

    <!-- original range is [-3.4028235e+38, 3.4028235e+38], normalized into range [-10, 10] -->
    <variable name="cartVelocity" rangeMin="-10.0" rangeMax="10.0" type="input" procedure="getCartVelocity">
        <terms>
            <term name="LOW">
                <mf>Triangle</mf>
                <params>-11 -10 0</params>
            </term>
            <term name="MEDIUM">
                <mf>Triangle</mf>
                <params>-5 0 5</params>
            </term>
            <term name="HIGH">
                <mf>Triangle</mf>
                <params>0 10 11</params>
            </term>
        </terms>
    </variable>

    <variable name="poleAngle" rangeMin="-0.42" rangeMax="0.42" type="input" procedure="getPoleAngle">
        <terms>
            <term name="LOW">
                <mf>Triangle</mf>
                <params>-0.52 -0.42 0</params>
            </term>
            <term name="MEDIUM">
                <mf>Triangle</mf>
                <params>-0.21 0.0 0.21</params>
            </term>
            <term name="HIGH">
                <mf>Triangle</mf>
                <params>0.0 0.42 0.52</params>
            </term>
        </terms>
    </variable>

    <!-- original range is [-3.4028235e+38, 3.4028235e+38], normalized range is [-10, 10] -->
    <variable name="poleVelocity" rangeMin="-10.0" rangeMax="10.0" type="input" procedure="getPoleVelocity">
        <terms>
            <term name="LOW">
                <mf>Triangle</mf>
                <params>-11 -10 0</params>
            </term>
            <term name="MEDIUM">
                <mf>Triangle</mf>
                <params>-5 0 5</params>
            </term>
            <term name="HIGH">
                <mf>Triangle</mf>
                <params>0 10 11</params>
            </term>
        </terms>
    </variable>

    <!-- output variable -->
    <variable name="Movement" rangeMin="0.0" rangeMax="1.0" type="output">
        <terms>
            <term name="LEFT">
                <mf>Triangle</mf>
                <params>0 0 1</params>
            </term>
            <term name="RIGHT">
                <mf>Triangle</mf>
                <params>0 1 1</params>
            </term>
        </terms>
    </variable>
</linguisticVariables>